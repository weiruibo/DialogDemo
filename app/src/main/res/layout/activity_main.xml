<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.gdmec.w07150837.dialogdemo.MainActivity">

    <TextView
        android:id="@+id/charactor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="characterpickerdialog"
        android:text="字符选择对话框" />

    <TextView
        android:id="@+id/uidate"
        android:layout_width="match_parent"

        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="datepickerdialog"

        android:text="日期选择对话框" />

    <TextView
        android:id="@+id/uitime"
        android:layout_width="match_parent"

        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="timepickerdialog"
        android:text="时间选择对话框" />

    <Button
        android:onClick="progressdialog"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="进度对话框"/>

</LinearLayout>
